@model List<TurboDSLR.Web.Models.PhotoModel>

@if (Model.Count() > 0)
{
    foreach (var photo in Model)
    {
    <div class="element col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="@photo.FullSizeUrl" alt="@photo.AltText">
            <div class="caption">
                <h3>@photo.Title</h3>
                @if (!string.IsNullOrWhiteSpace(photo.Caption))
                {
                    <p>@photo.Caption</p>
                }
            </div>
        </div>
    </div>
    }
}




